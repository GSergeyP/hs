{
  "comments": {
    "1": "npm i -D pug-cli",
    "2": "npm i -D browser-sync",
    "3": "npm i -D npm-run-all",
    "4": "npm i -D rimraf",
    "5": "npm i -D node-sass postcss postcss-preset-env postcss-cli",
    "6": "npm i -D svg-sprite-generator",
    "7": "npm i -D @atao60/fse-cli"
  },
  "name": "hs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist tmp",
    "pug": "pug --pretty src/pages/index.pug -o dist",
    "watch:pug": "pug --pretty -w src/pages/index.pug -o dist",
    "watch:svg": "mkdirp dist/svg && svg-sprite-generate -d src/svg -o dist/svg/icons.svg",
    "sass": "node-sass src/scss/style.scss -o tmp/css",
    "watch:sass": "node-sass -w src/scss/style.scss -o tmp/css",
    "watch:post": "postcss -w tmp/css -d dist/css -u postcss-preset-env",
    "watch:serve": "browser-sync dist -w",
    "copy-fonts": "fse copy src/fonts dist/fonts",
    "copy-img": "fse copy src/img dist/img",
    "dev": "npm-run-all clean pug sass -p watch:* copy-fonts copy-img",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.7",
    "browser-sync": "^2.27.10",
    "node-sass": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-preset-env": "^7.8.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^2.8.0"
  }
}
